<div class="container mt-3">
  <h2><%= book.title %></h2>
  <div class="d-flex gap-3 mt-3 mb-3 align-items-center justify-content-start">
    <img
      width="100"
      height="150"
      src="<%= book.coverImagePath %>"
      alt="Book Image"
    />
    <div class="book-description">
      <div class="mb-1 fs-5">
        <span class="text-primary fw-bold">Author:</span> <%= book.author.name
        %>
      </div>
      <div class="mb-1 fs-5">
        <span class="text-primary fw-bold"> Publish Date: </span>
        <%= book.publishDate.toDateString() %>
      </div>
      <div class="mb-1 fs-5">
        <span class="text-primary fw-bold">Page Count:</span> <%= book.pageCount
        %>
      </div>
      <div class="mb-1 fs-5">
        <span class="text-primary fw-bold">Description:</span> <%=
        book.description %>
      </div>
    </div>
  </div>

  <div class="d-flex gap-3">
    <a class="btn btn-success" href="/books/<%= book.id %>/edit">Edit</a>
    <%- include ('../partials/deleteForm', {url: `/books/${book.id}`}) %>
    <a class="btn btn-primary" href="/authors/<%= book.author.id %>"
      >View Author</a
    >
  </div>
</div>
