<div class="form-row d-flex flex-column flex-md-row gap-3">
  <div class="form-item flex-grow-1">
    <label class="form-label">Title</label>
    <input
      class="form-control"
      type="text"
      name="title"
      placeholder="Title of the Book"
      value="<%= book.title %>"
    />
  </div>
  <div class="form-item flex-grow-1">
    <label class="form-label">Author</label>
    <select class="form-select" name="author">
      <% authors.forEach(author => { %> <% if (author.id === book.author) { %>
      <option selected label="<%= author.name %>" value="<%= author.id %>">
        <% } else { %>
      </option>

      <option label="<%= author.name %>" value="<%= author.id %>">
        <% } %> <% }) %>
      </option>
    </select>
  </div>
</div>

<div class="form-row d-flex flex-column flex-md-row gap-3">
  <div class="form-item flex-grow-1">
    <label class="form-label">Publish Date</label>
    <input
      class="form-control"
      type="date"
      name="publishDate"
      value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>"
    />
  </div>
  <div class="form-item flex-grow-1">
    <label class="form-label">Page Count</label>
    <input
      class="form-control"
      type="number"
      name="pageCount"
      min="1"
      value="<%= book.pageCount %>"
    />
  </div>
</div>

<div class="form-row d-flex flex-column flex-md-row gap-3 mb-5">
  <div class="form-item flex-grow-1 form-item-no-grow">
    <label class="form-label">Cover</label>
    <input type="file" name="cover" class="book-cover filepond" />
  </div>

  <div class="form-item flex-grow-1">
    <label class="form-label">Description</label>
    <textarea class="form-control" name="description">
<%= book.description %></textarea
    >
  </div>
</div>
