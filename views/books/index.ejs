<div class="container">
  <h2>Search Books</h2>
  <form action="/books" method="GET">
    <div class="mb-1">
      <label class="form-label" for="title">Title</label>
      <input
        class="form-control"
        type="text"
        name="title"
        value="<%= searchOptions.title %>"
      />
    </div>
    <div class="d-flex flex-column flex-md-row gap-3 mb-3">
      <div class="flex-grow-1 mb-1">
        <label class="form-label" for="date">Published After</label>
        <input
          class="form-control"
          type="date"
          name="publishedAfter"
          value="<%= searchOptions.publishedAfter %>"
        />
      </div>
      <div class="flex-grow-1 mb-1">
        <label class="form-label" for="title">Published Before</label>
        <input
          class="form-control"
          type="date"
          name="publishedBefore"
          value="<%= searchOptions.publishedBefore %>"
        />
      </div>
    </div>
    <button class="btn btn-primary mb-3" type="submit">Search</button>
  </form>
  <br />
  <div><%- include('../partials/bookGrid.ejs', {books: books}) %></div>
</div>
